@using Microsoft.AspNetCore.Identity
@using FindNearestChangingTableVersion1.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right" style="margin-top: 18px;">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" style="color:black; font-size:medium; font-weight:bold;">Hej @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link" style="color:black; font-size:large; font-weight:bold;">Logga ut</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right" style="margin-top: 18px;">
        <li><a asp-area="" asp-controller="Account" asp-action="Register"style="color:black;font-size:large;font-weight:bold;">Registrering</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login" style="color:black;font-size:large;font-weight:bold;">Logga in</a></li>
    </ul>
}
